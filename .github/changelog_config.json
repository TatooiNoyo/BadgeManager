{
  "fetchViaCommits": true,
  "categories": [
    {
      "title": "ğŸš€ Features",
      "labels": ["feature", "feat"]
    },
    {
      "title": "ğŸ› Fixes",
      "labels": ["fix"]
    },
    {
      "title": "ğŸ§ª Tests",
      "labels": ["test"]
    },
    {
      "title": "âš™ï¸ Build & CI",
      "labels": ["build", "ci"]
    },
    {
      "title": "ğŸ“ Documentation",
      "labels": ["docs"]
    },
    {
      "title": "ğŸ§± Refactoring",
      "labels": ["refactor"]
    }
  ],
  "ignore_labels": ["ignore"],
  "sort": "ASC",
  "template": "${{CHANGELOG}}",
  "pr_template": "- ${{TITLE}} @${{AUTHOR}}",
  "empty_template": "No significant changes in this release.",
  "label_extractor": [
    {
      "pattern": "^feat.+",
      "target": "feat",
      "flag": "i"
    },
    {
      "pattern": "^fix.+",
      "target": "fix",
      "flag": "i"
    },
    {
      "pattern": "^test.+",
      "target": "test",
      "flag": "i"
    },
    {
      "pattern": "^build.+",
      "target": "build",
      "flag": "i"
    },
    {
      "pattern": "^ci.+",
      "target": "ci",
      "flag": "i"
    },
    {
      "pattern": "^docs.+",
      "target": "docs",
      "flag": "i"
    },
    {
      "pattern": "^refactor.+",
      "target": "refactor",
      "flag": "i"
    }
  ],
  "max_pull_requests": 1000,
  "max_back_track_time_days": 1000
}
